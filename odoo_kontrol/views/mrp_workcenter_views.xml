<odoo>
    <record id="mrp_workcenter_view_oee_mode" model="ir.ui.view">
        <field name="name">mrp.mrp_workcenter_view.oee_mode</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
        <field name="model">mrp.workcenter</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='oee_target']/.." position="after">
                <label for="oee_mode"/>
                <div class="o_row">
                    <field name="oee_mode"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>